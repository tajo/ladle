{
  "useWorkspaces": true,
  "version": "independent",
  "npmClientArgs": ["--no-lockfile"],
  "command": {
    "version": {
      "ignoreChanges": ["*.md"],
      "npmClient": "yarn",
      "message": "chore(release): publish [skip ci]"
    },
    "publish": {
      "npmClient": "npm",
      "conventionalCommits": true
    }
  }
}
