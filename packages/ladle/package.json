    "@types/babel__traverse": "^7.20.1",
    "@types/cross-spawn": "^6.0.3",
    "@types/debug": "^4.1.8",
    "@types/express": "^4.17.17",
    "@types/koa": "^2.13.8",
    "@types/lodash.merge": "^4.6.7",
    "@types/node": "^20.5.9",
    "@types/ws": "^8.5.5",
    "cross-env": "^7.0.3",
    "react": "^18.2.0",
