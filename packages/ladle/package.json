  "license": "MIT",
  "type": "module",
  "types": "./lib/app/exports.ts",
  "exports": {
    ".": "./lib/app/exports.ts",
    "./serve": "./api/serve.js",
    "./preview": "./api/preview.js",
    "./build": "./api/build.js",
    "./meta": "./api/meta.js",
    "./msw-node": "./api/msw-node.js"
